<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ForegroundImageView">
        <attr name="android:foreground"/>
    </declare-styleable>

    <declare-styleable name="PokemonTypeView">
        <attr name="pokeType" format="enum">
            <enum name="colorless" value="0" />
            <enum name="fire" value="1" />
            <enum name="grass" value="2" />
            <enum name="water" value="3" />
            <enum name="electric" value="4" />
            <enum name="fighting" value="5" />
            <enum name="psychic" value="6" />
            <enum name="steel" value="7" />
            <enum name="dragon" value="8" />
            <enum name="fairy" value="9" />
            <enum name="darkness" value="10" />
        </attr>
    </declare-styleable>


    <declare-styleable name="PokemonFormatView">
        <attr name="format" format="enum">
            <enum name="standard" value="0" />
            <enum name="expanded" value="1" />
            <enum name="unlimited" value="2" />
            <enum name="legacy" value="3" />
            <enum name="theme" value="4" />
        </attr>
        <attr name="strokeWidth" format="dimension|reference" />
        <attr name="strokeColor" format="color|reference" />
        <attr name="fillColor" format="color|reference" />
        <attr name="ringPadding" format="dimension|reference" />
        <attr name="nodeSize" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="MarqueeCardContainer">
        <attr name="cardWidth" format="dimension|reference" />
    </declare-styleable>

</resources>